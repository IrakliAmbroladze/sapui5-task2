<mvc:View controllerName="project1.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <Table
        id="booksTable"
        items="{booksModel>/books}"
         mode="MultiSelect">
        <headerToolbar>
                <Toolbar>
                    <Title text="Books" level="H2"/>

                    <ToolbarSpacer/>
										
										<Input id="inputTitle"
                           placeholder="Filter by title..."
                           width="200px"/>
										
										<Select id="selectGenre"
                            width="150px"
                            items="{genreModel>/genres}">
                    <core:Item xmlns:core="sap.ui.core"
                                   key="{genreModel>key}"
                                   text="{genreModel>text}"/>
                    </Select>

										<Button text="Filter"
                            type="Default"
                            press=".onFilter"/>
										
										<ToolbarSpacer/>

                    <Button text="Add Record" type="Accept" press=".onAddRecord"/>
                    <Button text="Delete Record" type="Reject" press=".onDeleteRecord"/>
                </Toolbar>
            </headerToolbar>
        <columns>
            <Column><Text text="ID"/></Column>
            <Column><Text text="Name"/></Column>
            <Column><Text text="Author"/></Column>
            <Column><Text text="Genre"/></Column>
            <Column><Text text="Release Date"/></Column>
            <Column><Text text="Available Quantity"/></Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{booksModel>ID}"/>
                    <Text text="{booksModel>Name}"/>
                    <Text text="{booksModel>Author}"/>
                    <Text text="{booksModel>Genre}"/>
                    <Text text="{booksModel>ReleaseDate}"/>
                    <Text text="{booksModel>AvailableQuantity}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    </Page>
</mvc:View>
