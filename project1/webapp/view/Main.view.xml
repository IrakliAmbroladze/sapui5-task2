<?xml version="1.0"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="project1.controller.Main">
  <Page id="page" title="{i18n&gt;title}">
    <Table id="booksTable" items="{booksModel&gt;/books}" mode="MultiSelect">
      <headerToolbar>
        <Toolbar>
          <Title text="Books" level="H2"/>
          <ToolbarSpacer/>
          <Input id="inputTitle" placeholder="Filter by title..." width="200px"/>
          <Select id="selectGenre" width="150px" items="{genreModel&gt;/genres}">
            <core:Item xmlns:core="sap.ui.core" key="{genreModel&gt;key}" text="{genreModel&gt;text}"/>
          </Select>
          <Button text="Filter" type="Default" press=".onFilter"/>
          <ToolbarSpacer/>
          <Button text="Add Record" type="Accept" press=".onAddRecord"/>
          <Button text="Delete Record" type="Reject" press=".onDeleteRecord"/>
        </Toolbar>
      </headerToolbar>
      <columns>
        <Column>
          <Text text="ID"/>
        </Column>
        <Column>
          <Text text="Name"/>
        </Column>
        <Column>
          <Text text="Author"/>
        </Column>
        <Column>
          <Text text="Genre"/>
        </Column>
        <Column>
          <Text text="Release Date"/>
        </Column>
        <Column>
          <Text text="Available Quantity"/>
        </Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <Text text="{booksModel&gt;ID}"/>
            <Text text="{booksModel&gt;Name}"/>
            <Text text="{booksModel&gt;Author}"/>
            <Text text="{booksModel&gt;Genre}"/>
            <Text text="{booksModel&gt;ReleaseDate}"/>
            <Text text="{booksModel&gt;AvailableQuantity}"/>
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </Page>
</mvc:View>
